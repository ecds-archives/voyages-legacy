	type (simple|port|percent) #REQUIRED
	defaultRangeSearchType (between|eq|le|ge) #IMPLIED
	subType (general|year|ratio) #IMPLIED
	spssName CDATA #IMPLIED
	inEstimates (true|false) #IMPLIED
	listDescription CDATA #IMPLIED>

