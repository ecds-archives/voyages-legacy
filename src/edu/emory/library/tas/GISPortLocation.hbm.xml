<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">


<hibernate-mapping>

	<class name="edu.emory.library.tas.GISPortLocation" table="ports">
		<cache usage="read-write" />
        <id name="portName" column="name">
        	<generator class="native"/>
        </id>
        <property name="x" formula="x(wkb_geometry)"/>
        <property name="y" formula="y(wkb_geometry)"/>
    </class>
    
</hibernate-mapping>